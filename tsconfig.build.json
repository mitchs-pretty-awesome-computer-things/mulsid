{
	"compilerOptions": {
		"noEmit": false,
		"outDir": "dist",
		"declaration": true,
		"emitDeclarationOnly": false,
		"sourceMap": true,

		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "Bundler",
		"verbatimModuleSyntax": true,
		"stripInternal": true,
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"exclude": ["**/*.test.ts", "dist/**"]
}
